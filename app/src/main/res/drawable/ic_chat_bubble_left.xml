<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="left|center|top"
        android:top="6dp"
        android:left="6dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <stroke android:color="@color/shadow" android:width="1dp"/>
                <solid android:color="@color/white" />
                <size
                    android:width="24dp"
                    android:height="24dp" />
            </shape>
        </rotate>
    </item>

    <item android:left="6dp">
        <shape android:shape="rectangle">
            <stroke android:color="@color/shadow" android:width="1dp" />
            <corners android:radius="10dp" />
            <solid android:color="@color/white" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>

    <item
        android:gravity="left|center|top"
        android:top="6dp"
        android:left="7.5dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <size
                    android:width="24dp"
                    android:height="24dp" />
            </shape>
        </rotate>
    </item>

</layer-list>