<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginEnd="@dimen/dp_50"
        app:cardCornerRadius="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_discovery_card_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_alignParentTop="true"
                android:background="@color/gray"
                android:contentDescription="背景"
                android:scaleType="fitXY"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_discovery_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_discovery_card_background"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_3"
                android:padding="@dimen/dp_3"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/tv_discovery_card_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_discovery_card_name"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_3"
                android:padding="@dimen/dp_3"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/tv_discovery_card_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_discovery_card_age"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_3"
                android:padding="@dimen/dp_3"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/tv_discovery_card_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_discovery_card_sex"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_3"
                android:padding="@dimen/dp_3"
                android:text="@string/app_name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_above="@id/ly_bottom"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/ly_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ly_start_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/item_press_change"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_start_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/ic_start_chat" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/line" />

                <LinearLayout
                    android:id="@+id/ly_collect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/item_press_change"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/ic_collect" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>